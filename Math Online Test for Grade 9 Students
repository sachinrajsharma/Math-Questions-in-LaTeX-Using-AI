	\section*{Class 9 Number System â€“ Exponents and Properties of Exponents (Level: Difficult)}
	
	\begin{enumerate}
		\item Simplify: $\left(\frac{3^4 \times 3^{-2}}{3^3}\right)^2$
		\begin{enumerate}
			\item $3^2$
			\item $3^4$
			\item $3^{-2}$
			\item $3^0$
		\end{enumerate}
		\textbf{Answer:} (c) $3^{-2}$ \\
		\textbf{Solution:} $(3^4 \times 3^{-2}) = 3^2$; divided by $3^3$ gives $3^{-1}$; squared $= 3^{-2}$
		
		\item Evaluate: $(2^{-3} \times 4^2)^2$
		\begin{enumerate}
			\item $2^4$
			\item $2^2$
			\item $2^6$
			\item $2^8$
		\end{enumerate}
		\textbf{Answer:} (b) $2^2$ \\
		\textbf{Solution:} $4^2 = 2^4$, so $(2^{-3} \times 2^4)^2 = (2^1)^2 = 2^2$
		
		\item If $x = 2^a$ and $y = 2^b$, find value of $\frac{x^2 y^3}{x^4 y}$
		\begin{enumerate}
			\item $2^{2a + 3b - 4a - b}$
			\item $2^{a + 2b}$
			\item $2^{b - a}$
			\item $2^{-2a + 2b}$
		\end{enumerate}
		\textbf{Answer:} (d) $2^{-2a + 2b}$
		
		\item Which of the following equals $81^{3/4}$?
		\begin{enumerate}
			\item $3^3$
			\item $9^2$
			\item $27$
			\item $81$
		\end{enumerate}
		\textbf{Answer:} (a) $3^3$ \\
		\textbf{Solution:} $81 = 3^4$, so $(3^4)^{3/4} = 3^3$
		
		\item Find the value of $\left(\frac{1}{8}\right)^{-4/3}$
		\begin{enumerate}
			\item $16$
			\item $32$
			\item $8$
			\item $4$
		\end{enumerate}
		\textbf{Answer:} (a) $16$ \\
		\textbf{Solution:} $\frac{1}{8} = 2^{-3}$, so $(2^{-3})^{-4/3} = 2^4 = 16$
		
		\item Simplify: $x^{-2} \times x^5 \times x^{-3}$
		\begin{enumerate}
			\item $x^0$
			\item $x^{-10}$
			\item $x^4$
			\item $x^2$
		\end{enumerate}
		\textbf{Answer:} (a) $x^0$ \\
		\textbf{Solution:} Add powers: $-2 + 5 - 3 = 0$
		
		\item If $a^{-2} = \frac{1}{16}$, find value of $a$
		\begin{enumerate}
			\item $4$
			\item $2$
			\item $\frac{1}{4}$
			\item $-4$
		\end{enumerate}
		\textbf{Answer:} (a) $4$ \\
		\textbf{Solution:} $a^{-2} = \frac{1}{16}$ implies $a^2 = 16$, so $a = \pm4$
		
		\item Evaluate: $\left(27^{1/3}\right)^2$
		\begin{enumerate}
			\item $3$
			\item $6$
			\item $9$
			\item $27$
		\end{enumerate}
		\textbf{Answer:} (c) $9$ \\
		\textbf{Solution:} $27^{1/3} = 3$, and $3^2 = 9$
		
		\item Find $x$ if $2^x = 128$
		\begin{enumerate}
			\item $6$
			\item $7$
			\item $8$
			\item $5$
		\end{enumerate}
		\textbf{Answer:} (b) $7$ \\
		\textbf{Solution:} $128 = 2^7$
		
		\item Simplify: $\frac{(2^3)^4}{2^5}$
		\begin{enumerate}
			\item $2^7$
			\item $2^{12}$
			\item $2^8$
			\item $2^5$
		\end{enumerate}
		\textbf{Answer:} (a) $2^7$ \\
		\textbf{Solution:} $(2^3)^4 = 2^{12}$, divided by $2^5 = 2^7$
		
		\item What is the value of $a^0$ for any non-zero $a$?
		\begin{enumerate}
			\item $0$
			\item $1$
			\item $a$
			\item $-1$
		\end{enumerate}
		\textbf{Answer:} (b) $1$
		
		\item Express $0.0001$ as power of $10$
		\begin{enumerate}
			\item $10^{-3}$
			\item $10^{-4}$
			\item $10^{-5}$
			\item $10^4$
		\end{enumerate}
		\textbf{Answer:} (b) $10^{-4}$
		
		\item Simplify: $(a^{-1} b^2)^{-2}$
		\begin{enumerate}
			\item $a^2 b^4$
			\item $a^2 b^{-4}$
			\item $a^{-2} b^4$
			\item $a^{-2} b^{-4}$
		\end{enumerate}
		\textbf{Answer:} (b) $a^2 b^{-4}$
		
		\item Simplify: $\left(\frac{x^2}{x^{-3}}\right)^2$
		\begin{enumerate}
			\item $x^{10}$
			\item $x^{-10}$
			\item $x^5$
			\item $x^{-5}$
		\end{enumerate}
		\textbf{Answer:} (a) $x^{10}$ \\
		\textbf{Solution:} $\frac{x^2}{x^{-3}} = x^5$; $(x^5)^2 = x^{10}$
		
		\item If $x = 3^2$ and $y = 3^{-1}$, find value of $\frac{x}{y^2}$
		\begin{enumerate}
			\item $3^0$
			\item $3^4$
			\item $3^3$
			\item $3$
		\end{enumerate}
		\textbf{Answer:} (b) $3^4$ \\
		\textbf{Solution:} $y^2 = 3^{-2}$; $\frac{3^2}{3^{-2}} = 3^4$
	\end{enumerate}
	
